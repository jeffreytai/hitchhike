  <options>
    <!-- Set connection timeout to 2 seconds -->
    <option name="global_ack_timeout" value="2000"></option>

    <option type="ts_http" name="user_agent">
      <user_agent probability="100">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4</user_agent>
    </option>
  </options>

  <sessions>
    <session name="http-example" probability="100" type="ts_http">

      <!-- start out at the dashboard. -->
      <request>
        <http url='/' version='1.1' method='GET'></http>
      </request>

      <!-- wait for up to 2 seconds, user is looking at splash page -->
      <thinktime value="2" random="true"></thinktime>

      <!-- sign up as a new user.  -->
      <request>
        <http url='/users/register' version='1.1' method='GET'></http>
      </request>

      <!-- wait for up to 2 seconds, user is filling out signup form -->
      <thinktime value="2" random="true"></thinktime>

      <!-- create a random number to make a unique username (might not work) -->
      <setdynvars sourcetype="random_number" start="1000" end="9999999">
        <var name="random_username" />
      </setdynvars>

      <!-- get the auth_token variable -->
      <form action="/create" method="POST">
        <input name="auth_token" type="hidden" value="gDTI=" />
      </form>

      <request>
        <dyn_variable name="auth_token"></dyn_variable>
        <http url="/new" method="GET" version="1.1"></http>
      </request>

      <!-- post to /users/register to create a new user -->
      <request subst="true">
      <request>
        <http
          url='/users/register'
          version='1.1'
          method='POST'
          contents='utf8=%E2%9C%93&amp;authenticity_token=%%_auth_token%%%3D%3D&amp;user%5Bfirst_name%5D=Test&amp;user%5Blast_name%5D=User&amp;user%5Busername%5D=%%_random_username%%&amp;user%5Bemail%5D=%%_random_username%%%40ucla.edu&amp;user%5Bpassword%5D=password1&amp;user%5Bpassword_confirmation%5D=password1&amp;commit=Sign+up'>
        </http>
      </request>

      <!-- visit the user's profile page.  -->
      <request>
        <http url='/users/%%_random_username%%' version='1.1' method='GET'></http>
      </request>

      <!-- user goes to create a new trip.  -->
      <request>
        <http url='/trips/new?' version='1.1' method='GET'></http>
      </request>

      <!-- wait for up to 2 seconds, user is filling out new trip form -->
      <thinktime value="2" random="true"></thinktime>

      <!-- create a random number to make a unique location name -->
      <setdynvars sourcetype="random_number" start="1000" end="9999999">
        <var name="random_location_name" />
      </setdynvars>

      <!-- post to /trips to create a new trip -->
      <request subst="true">
      <request>
        <dyn_variable name="created_trip_id" re="[Ll]ocation: http://.*/trips/(.*)\r"/>
        <http
          url='/trips/new'
          version='1.1'
          method='POST'
          contents='utf8=%E2%9C%93&amp;authenticity_token=qEgUQ7kyTkmAUHSQHHDZcNKm1CQWT%2BQVAgwljLE6eKLwkIIRZgR9g%2BqgBmvVHm%2FCBC%2Fe5poVJ2Mz7S5eGrqjfw%3D%3D&amp;trip%5Btitle%5D=Test&amp;trip%5Bdescription%5D=testing&amp;trip%5Blocations%5D=%5B%7B%22lat%22%3A33.97548099999999%2C%22lng%22%3A-118.4632426%2C%22name%22%3A%22Random+Action%22%7D%2C%7B%22lat%22%3A34.050927%2C%22lng%22%3A-118.459968%2C%22name%22%3A%22Way+of+the+Future%22%7D%2C%7B%22lat%22%3A33.98971580000001%2C%22lng%22%3A-118.46321319999998%2C%22name%22%3A%22Another+Kind+of+Sunrise%22%7D%5D&amp;trip%5Btags%5D=%23test&amp;trip%5Bpostdate%281i%29%5D=2015&trip%5Bpostdate%282i%29%5D=11&amp;trip%5Bpostdate%283i%29%5D=12&amp;trip%5Bpostdate%284i%29%5D=19&amp;trip%5Bpostdate%285i%29%5D=25&amp;commit=Create+Trip'
        </http>
      </request>

      <!-- wait for up to 2 seconds, user decides to delete trip -->
      <thinktime value="2" random="true"></thinktime>

      <!-- edit the trip we just created (fill out later) -->

      <!-- delete the trip we just created -->
      <request subst="true">
        <http url="/trips/%%_created_trip_id%%" method="DELETE">
        </http>
      </request>

      <!-- visit the explore page.  -->
      <request>
        <http url='/explore' version='1.1' method='GET'></http>
      </request>

      <!-- wait for up to 2 seconds, user decides to view a trip -->
      <thinktime value="2" random="true"></thinktime>

      <!-- click on the first trip shown.  -->
      <request>
        <http url='/trip/GETTHEID' version='1.1' method='GET'></http>
      </request>

      <!-- comment on the trip.  -->
      <request>
        <http
          url='/trips/GETTHEID/commments'
          version='1.1'
          method='POST'
          contents=''
        </http>
      </request>

      <!-- follow the user.  -->

      <!-- unfollow the user.  -->

      <!-- Uncomment the following to debug print your dynamic variables  -->

      <setdynvars sourcetype="eval" code="fun( {Pid, DynVars} ) ->
        io:format([126, $p, 126, $n, 126, $n], [DynVars]),
        ok end.">
        <var name="dump" />
      </setdynvars>


      <!-- logout of the account.  -->
      <request>
        <http url='/users/sign_out' version='1.1' method='DELETE'></http>
      </request>

    </session>
  </sessions>
