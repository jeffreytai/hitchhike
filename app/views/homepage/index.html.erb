<body>
  <%= render("shared/menu") %>


  <br/><br/><br/><br/><br/>
  <div class="container">

    <% if user_signed_in? %>
      <%= link_to 'New Trip', new_trip_path %>
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Locations</th>
            <th>Tags</th>
            <th>Postdate</th>
            <th>User</th>
            <!-- <th colspan="3"></th> -->
          </tr>
        </thead>

        <tbody>
        <% @trips.each do |trip| %>
            <tr>
              <td><%= trip.title %></td>
              <td><%= trip.description %></td>
              <td><%= trip.locations %></td>
              <td><%= trip.tags %></td>
              <td><%= trip.postdate %></td>
              <td><%= trip.user %></td>
              <td><%= link_to 'More', trip %></td>
              <% if current_user.email == trip.user %>
                  <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
                  <td><%= link_to 'Delete', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            </tr>
        <% end %>
        </tbody>
      </table>

  <% end %>

<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
